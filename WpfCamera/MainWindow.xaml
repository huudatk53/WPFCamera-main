<Window x:Class="WpfCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCamera" 
				xmlns:xamlhost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
				mc:Ignorable="d"
        Title="WPF camera">

	<Grid>
		<xamlhost:WindowsXamlHost x:Name="XamlHost" Margin="0 0 0 40"  />

		<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" >
			<Button Content="Photo" Margin="10" Click="Photo_Click" />
			<Button Content="Video" Margin="10" Click="Video_Click"/>
			<Button Content="Audio" Margin="10" Click="Audio_Click"/>
		</StackPanel>
	</Grid>
</Window>
